# Development Environment Configuration Template
# Copy this file to .env and customize for your development environment

# =============================================================================
# ENVIRONMENT SETTINGS
# =============================================================================
COMPLIANCE_SENTINEL_ENVIRONMENT=development
COMPLIANCE_SENTINEL_SERVICE_NAME=compliance-sentinel-dev
COMPLIANCE_SENTINEL_VERSION=1.0.0-dev

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
COMPLIANCE_SENTINEL_LOG_LEVEL=DEBUG
COMPLIANCE_SENTINEL_ROOT_LOG_LEVEL=INFO
COMPLIANCE_SENTINEL_LOG_FORMAT=structured
COMPLIANCE_SENTINEL_CONSOLE_LOGGING=true
COMPLIANCE_SENTINEL_FILE_LOGGING=false
COMPLIANCE_SENTINEL_JSON_LOGGING=false
COMPLIANCE_SENTINEL_SECURITY_FILTER=false

# =============================================================================
# SYSTEM CONFIGURATION
# =============================================================================
COMPLIANCE_SENTINEL_PYTHON_VERSION=3.11
COMPLIANCE_SENTINEL_ANALYSIS_TOOLS=bandit,semgrep
COMPLIANCE_SENTINEL_MCP_SERVER_URL=http://localhost:8000
COMPLIANCE_SENTINEL_CACHE_TTL=1800
COMPLIANCE_SENTINEL_MAX_CONCURRENT_ANALYSES=5
COMPLIANCE_SENTINEL_SEVERITY_THRESHOLD=low
COMPLIANCE_SENTINEL_ENABLE_EXTERNAL_INTELLIGENCE=true
COMPLIANCE_SENTINEL_ANALYSIS_TIMEOUT=300
COMPLIANCE_SENTINEL_HOOKS_ENABLED=true
COMPLIANCE_SENTINEL_IDE_FEEDBACK_ENABLED=true

# =============================================================================
# MCP SERVER CONFIGURATION
# =============================================================================
COMPLIANCE_SENTINEL_MCP_HOST=localhost
COMPLIANCE_SENTINEL_MCP_PORT=8000
COMPLIANCE_SENTINEL_MCP_WORKERS=4
COMPLIANCE_SENTINEL_MCP_ENABLE_CORS=true
COMPLIANCE_SENTINEL_MCP_API_KEY_REQUIRED=false
COMPLIANCE_SENTINEL_MCP_RATE_LIMIT_REQUESTS=1000
COMPLIANCE_SENTINEL_MCP_RATE_LIMIT_WINDOW=3600
COMPLIANCE_SENTINEL_MCP_CACHE_ENABLED=true
COMPLIANCE_SENTINEL_MCP_CACHE_SIZE=1000

# =============================================================================
# EXTERNAL API CONFIGURATION
# =============================================================================
MCP_NVD_BASE_URL=https://services.nvd.nist.gov/rest/json/cves/2.0
MCP_CVE_BASE_URL=https://cve.circl.lu/api
MCP_OSV_BASE_URL=https://api.osv.dev/v1
MCP_NVD_DELAY_SECONDS=6.0
MCP_CVE_DELAY_SECONDS=1.0
MCP_REQUEST_TIMEOUT_SECONDS=30.0
MCP_DEFAULT_SEARCH_LIMIT=10
MCP_DEFAULT_LATEST_LIMIT=20
MCP_MAX_RETRY_ATTEMPTS=3
MCP_RETRY_BASE_DELAY=2.0

# =============================================================================
# CACHE CONFIGURATION
# =============================================================================
MCP_CACHE_TTL_SECONDS=1800
MCP_COMPLIANCE_CACHE_TTL_SECONDS=3600
MCP_REQUIREMENTS_CACHE_TTL_SECONDS=86400

# =============================================================================
# AUTHENTICATION CONFIGURATION
# =============================================================================
COMPLIANCE_SENTINEL_AUTH_JWT_ALGORITHM=HS256
COMPLIANCE_SENTINEL_AUTH_JWT_EXPIRY_HOURS=24
COMPLIANCE_SENTINEL_AUTH_API_KEY_LENGTH=32
COMPLIANCE_SENTINEL_AUTH_DEFAULT_API_KEY_EXPIRY_DAYS=365
COMPLIANCE_SENTINEL_AUTH_ENABLE_DEFAULT_ADMIN_KEY=true
COMPLIANCE_SENTINEL_AUTH_PASSWORD_HASH_SCHEMES=["bcrypt"]

# =============================================================================
# RATE LIMITING CONFIGURATION
# =============================================================================
MCP_RATE_LIMIT_TRUSTED_REQUESTS=1000
MCP_RATE_LIMIT_TRUSTED_WINDOW=3600
MCP_RATE_LIMIT_NORMAL_REQUESTS=100
MCP_RATE_LIMIT_NORMAL_WINDOW=3600
MCP_RATE_LIMIT_SUSPICIOUS_REQUESTS=10
MCP_RATE_LIMIT_SUSPICIOUS_WINDOW=3600
MCP_RATE_LIMIT_BLOCKED_REQUESTS=0
MCP_RATE_LIMIT_BLOCKED_WINDOW=3600

# =============================================================================
# METRICS AND MONITORING
# =============================================================================
METRICS_ENABLED=true
METRICS_COLLECTION_INTERVAL=60
METRICS_MAX_HISTORY=1000
METRICS_RETENTION_HOURS=24
METRICS_EXPORT_ENABLED=false
METRICS_EXPORT_FORMAT=prometheus
METRICS_ALERTS_ENABLED=true

# =============================================================================
# CLI CONFIGURATION
# =============================================================================
COMPLIANCE_SENTINEL_CLI_MAX_FILES=100
COMPLIANCE_SENTINEL_CLI_DEFAULT_PATTERN=**/*.py
COMPLIANCE_SENTINEL_CLI_OUTPUT_FORMAT=text
COMPLIANCE_SENTINEL_CLI_VERBOSE=false
COMPLIANCE_SENTINEL_CLI_COLORS=true
COMPLIANCE_SENTINEL_CLI_PROGRESS=true

# =============================================================================
# ANALYSIS CONFIGURATION
# =============================================================================
COMPLIANCE_SENTINEL_ANALYSIS_OUTPUT_FORMAT=text
COMPLIANCE_SENTINEL_ANALYSIS_SEVERITY_THRESHOLD=low
COMPLIANCE_SENTINEL_ANALYSIS_FILE_EXTENSIONS=.py,.js,.ts,.java,.go
COMPLIANCE_SENTINEL_ANALYSIS_MAX_FILE_SIZE_MB=10
COMPLIANCE_SENTINEL_ANALYSIS_TIMEOUT_SECONDS=300

# =============================================================================
# HOOK CONFIGURATION
# =============================================================================
COMPLIANCE_SENTINEL_HOOK_FILE_PATTERNS=["*.py", "*.js", "*.ts"]
COMPLIANCE_SENTINEL_HOOK_EXCLUDED_DIRS=["node_modules", "__pycache__", ".git", ".venv", "venv"]
COMPLIANCE_SENTINEL_HOOK_ANALYSIS_TIMEOUT=60
COMPLIANCE_SENTINEL_HOOK_ASYNC_PROCESSING=true
COMPLIANCE_SENTINEL_HOOK_BATCH_SIZE=10
COMPLIANCE_SENTINEL_HOOK_DEBOUNCE_DELAY=0.5

# =============================================================================
# SECRETS (DO NOT COMMIT REAL VALUES)
# =============================================================================
# Generate a secure JWT secret for your development environment
# COMPLIANCE_SENTINEL_AUTH_JWT_SECRET=your-development-jwt-secret-here

# Optional API keys for external services (development/testing only)
# NVD_API_KEY=your-nvd-api-key-here
# COMPLIANCE_SENTINEL_AUTH_ADMIN_API_KEY=your-admin-api-key-here

# =============================================================================
# DEVELOPMENT-SPECIFIC SETTINGS
# =============================================================================
# Enable debug features
COMPLIANCE_SENTINEL_DEBUG_ENABLED=true

# Allow test data in development
COMPLIANCE_SENTINEL_ALLOW_TEST_DATA=true

# Disable strict production validations
COMPLIANCE_SENTINEL_STRICT_VALIDATION=false